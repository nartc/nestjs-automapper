{
  "name": "document-service",
  "version": "0.0.1",
  "description": "This service provides all the features for managing documents",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf build",
    "build": "npm run format && npm run lint && nest build",
    "build:prod": "rimraf dist && webpack --config webpack.config.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/server",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node -r ./tsconfig-paths-bootstrap.js dist/server",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.12",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.6.12",
    "@nestjs/platform-express": "^7.6.12",
    "@nestjs/swagger": "^4.7.13",
    "axios": "^0.21.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "config": "^3.3.3",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "helmet": "^4.4.1",
    "joi": "^17.4.0",
    "moment": "^2.29.1",
    "nest-winston": "^1.4.0",
    "nestjsx-automapper": "^3.1.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.1",
    "winston": "^3.3.3",
    "winston-elasticsearch": "^0.13.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.5",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.12",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@types/jest": "26.0.20",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "26.6.3",
    "jest-extended": "^0.11.5",
    "prettier": "2.2.1",
    "resolve-ts-aliases": "^1.0.1",
    "start-server-webpack-plugin": "^2.2.5",
    "supertest": "^6.1.3",
    "terser-webpack-plugin": "^5.1.1",
    "ts-jest": "26.5.1",
    "ts-loader": "^8.0.17",
    "ts-node": "9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^2.5.2"
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "src",
      "test"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/test/e2e"
    ],
    "moduleNameMapper": {
      "@configurations/(.*)$": "<rootDir>/src/shared/configurations/$1",
      "@constants/(.*)$": "<rootDir>/src/shared/constants/$1",
      "@decorators/(.*)$": "<rootDir>/src/shared/decorators/$1",
      "@filters/(.*)$": "<rootDir>/src/shared/filters/$1",
      "@interceptors/(.*)$": "<rootDir>/src/shared/interceptors/$1",
      "@modules/documents/(.*)$": "<rootDir>/src/documents/$1",
      "@shared/(.*)$": "<rootDir>/src/shared/$1"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
